#!/usr/bin/perl -w
# Convert text to morse code symbols.  2-clause BSD license.

# Copyright 2018 /u/molo1134. All rights reserved.

use strict;
use utf8;
use feature 'unicode_strings';
binmode(STDOUT, ":utf8");
use Encode qw(decode);
use I18N::Langinfo qw(langinfo CODESET);

my %morse;

$morse{A} = ".-";
$morse{B} = "-...";
$morse{C} = "-.-.";
$morse{D} = "-..";
$morse{E} = ".";
$morse{F} = "..-.";
$morse{G} = "--.";
$morse{H} = "....";
$morse{I} = "..";
$morse{J} = ".---";
$morse{K} = "-.-";
$morse{L} = ".-..";
$morse{M} = "--";
$morse{N} = "-.";
$morse{O} = "---";
$morse{P} = ".--.";
$morse{Q} = "--.-";
$morse{R} = ".-.";
$morse{S} = "...";
$morse{T} = "-";
$morse{U} = "..-";
$morse{V} = "...-";
$morse{W} = ".--";
$morse{X} = "-..-";
$morse{Y} = "-.--";
$morse{Z} = "--..";
$morse{1} = ".----";
$morse{2} = "..---";
$morse{3} = "...--";
$morse{4} = "....-";
$morse{5} = ".....";
$morse{6} = "-....";
$morse{7} = "--...";
$morse{8} = "---..";
$morse{9} = "----.";
$morse{0} = "-----";
$morse{" "} = "   ";
$morse{"."} = ".-.-.-";
$morse{","} = "--..--";
$morse{"?"} = "..--..";
$morse{"'"} = ".----.";
$morse{"!"} = "-.-.--";
$morse{"/"} = "-..-.";
$morse{"("} = "-.--.";
$morse{")"} = "-.--.-";
$morse{"&"} = ".-...";
$morse{":"} = "---...";
$morse{";"} = "-.-.-.";
$morse{"="} = "-...-";
$morse{"+"} = ".-.-.";
$morse{"-"} = "-....-";
$morse{"\""} = ".-..-.";
$morse{"@"} = ".--.-.";
$morse{"Ä"} = ".-.-";
$morse{"Å"} = ".-.-";
$morse{"Ą"} = ".-.-";
$morse{"Æ"} = ".-.-";
$morse{"É"} = "..-..";
$morse{"Ñ"} = "--.--";
$morse{"Ö"} = "---.";
$morse{"Ü"} = "..--";
$morse{"Š"} = "----";
# greek
$morse{"Α"} = ".-";
$morse{"Β"} = "-...";
$morse{"Γ"} = "--.";
$morse{"Δ"} = "-..";
$morse{"Ε"} = ".";
$morse{"Ζ"} = "--..";
$morse{"Η"} = "....";
$morse{"Θ"} = "-.-.";
$morse{"Ι"} = "..";
$morse{"Κ"} = "-.-";
$morse{"Λ"} = ".-..";
$morse{"Μ"} = "--";
$morse{"Ν"} = "-.";
$morse{"Ξ"} = "-..-";
$morse{"Ο"} = "---";
$morse{"Π"} = ".--.";
$morse{"Ρ"} = ".-.";
$morse{"Σ"} = "...";
$morse{"Τ"} = "-";
$morse{"Υ"} = "-.--";
$morse{"Φ"} = "..-.";
$morse{"Χ"} = "----";
$morse{"Ψ"} = "--.-";
$morse{"Ω"} = ".--";
$morse{"Ά"} = ".-";
$morse{"Έ"} = ".";
$morse{"Ή"} = "....";
$morse{"Ί"} = "..";
$morse{"Ό"} = "---";
$morse{"Ύ"} = "-.--";
$morse{"Ώ"} = ".--";
$morse{"ΐ"} = "..";
$morse{"ΰ"} = "-.--";
$morse{"Ϊ"} = "..";
$morse{"Ϋ"} = "-.--";

# eggdrop doesn't split args on spaces
my $args = join(' ', @ARGV);
$args =~ s/   / \/ /g;

# decode command line from locale-specified codeset
my $codeset = langinfo(CODESET);
$args = decode($codeset, $args);

@ARGV=split(' ', $args);

my $target;
while ($target = shift(@ARGV)) {
  foreach my $val (split('', $target)) {
    print morse($val), " ";
  }
  print "  ";
}
print "\n";
exit 0;

sub morse {
  my $char = shift;
  #print "char: $char, ", uc($char), "\n";
  return $morse{uc($char)} || return "�";
}


